---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts'; 
import {getLangFromUrl, useTranslations, getLinkWithLang, getSameUrlInNewLang} from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const homeLink = getLinkWithLang(lang, '')
const blogLink = getLinkWithLang(lang, 'blog')
const aboutLink = getLinkWithLang(lang, 'about')
const switchPL = getSameUrlInNewLang(Astro.url, 'pl')
const switchEn = getSameUrlInNewLang(Astro.url, 'en')

---

<header>
	<nav>
		<h2><a href={`/${lang}/home`}>{SITE_TITLE}</a></h2>
		<div class="internal-links">
			<HeaderLink href={homeLink}>{t('nav.home')}</HeaderLink>
			<HeaderLink href={blogLink}>{t('nav.blog')}</HeaderLink>
			<HeaderLink href={aboutLink}>{t('nav.about')}</HeaderLink>
		</div>
		<astro:language-switcher />
		<div class="social-links">
			<a href={switchPL}>
				<span class="sr-only">Polski</span>
				PL
			</a>
			<a href={switchEn}>
				<span class="sr-only">Engish</span>
				EN
			</a>			
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>
