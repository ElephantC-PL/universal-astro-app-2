---
import Layout from '../../layouts/BlogPost.astro';
import AboutHeroImage from '../../assets/blog-placeholder-about.jpg';
import { AstroError } from 'astro/errors';
import { getEntry, render } from 'astro:content';
import { getAllTranslatedPaths } from '../../i18n/utils';

export function getStaticPaths() {
	const params = getAllTranslatedPaths()	
  	return params;
}

const { lang} = Astro.params;

const entry = await getEntry('home', lang);

if (!entry) {
  throw new AstroError(`No home content for lang=${lang}`);
}

const { Content } = await render(entry);
---
<Layout
	title={entry.data.title}
	description="Lorem ipsum dolor sit amet"
	pubDate={new Date('August 08 2021')}
	heroImage={AboutHeroImage}
>
	<p>
		Lang: {lang} <br />		
	</p>
	<Content />
</Layout>