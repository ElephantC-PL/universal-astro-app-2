---
import { type CollectionEntry, getCollection } from 'astro:content';
import BlogPost from '../../../layouts/BlogPost.astro';
import { render } from 'astro:content';
import { getTranslatedPaths, getOneLanguageVersionPerPost, extractPostTitleFromId, getTranslatedPath } from '../../../i18n/utils';

const { lang, blog, slug } = Astro.params;
const posts = getOneLanguageVersionPerPost((await getCollection('blog')), lang)
const slugArray = posts.map((post) => ({
		return extractPostTitleFromId(post.id)
}));


export async function getStaticPaths() {
	const posts = await getCollection('blog');
	return posts.map((post) => ({
		params: { slug: post.id },
		props: post,
	}));
}
type Props = CollectionEntry<'blog'>;

const post = Astro.props;
const { Content } = await render(post);
---

<BlogPost {...post.data}>
	
</BlogPost>